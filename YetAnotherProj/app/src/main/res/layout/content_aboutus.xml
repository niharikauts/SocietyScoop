<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.niharika.yetanotherproj.Aboutus"
    tools:showIn="@layout/activity_aboutus">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/dosti"
        android:layout_centerHorizontal="true"
        android:id="@+id/img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:textStyle="bold"
        android:layout_below="@+id/img"
        android:textColor="#FF484747"
       />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:id="@+id/card_view1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VARUN SHANBHAG"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CALL"
            android:layout_marginLeft="250dp"
            android:id="@+id/var"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view1"
        android:id="@+id/card_view2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NIHARIKA KARGUDRI"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CALL"
            android:layout_marginLeft="250dp"
            android:id="@+id/nih"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view2"
        android:id="@+id/card_view3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AMARPREET SINGH"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CALL"
            android:layout_marginLeft="250dp"
            android:id="@+id/amar"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
